@model Superhero.Models.LocationVM

@{
    ViewBag.Title = "EditLocation";
}

<h2>Edit Location</h2>

@using (Html.BeginForm())
{
   @Html.HiddenFor(l => l.LocationID)
    <div class="form-group">
        <div class="row">
            <div class="col-xs-3">
                Location Name @Html.TextBoxFor(l => l.LocationName, new { @class = "form-control" })
            </div>
            <div class="col-xs-3">
                Location Description @Html.TextBoxFor(l => l.LocationDescription, new { @class = "form-control" })
            </div>
            <div class="col-xs-3">
                Location Address @Html.TextBoxFor(l => l.LocationAddress, new { @class = "form-control" })
            </div>
            <div class="col-xs-3">
                Latitude @Html.TextBoxFor(l => l.LatitudeCoordinate, new { @class = "form-control" })
            </div>
            <div class="col-xs-3">
                Longitude @Html.TextBoxFor(l => l.LongitudeCoordinate, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="col-xs-3">
        <button type="submit" class="btn btn-default">Save</button>
    </div>
}
<div class="col-xs-12" id="locationarea">

</div>