@model Superhero.Web.SightingVM

@{
    ViewBag.Title = "AddSighting";
}

<h2>AddSighting</h2>

<div class="row">
    @using (Html.BeginForm("AddSighting", "User", FormMethod.Post, new
    { enctype = "multipart/form-data" }))
    {<div class="form-group">
        <div class="row">
            <div class="col-xs-3">
                Sighting Date @Html.TextBoxFor(s => s.SightingObject.Date, new { @class = "form-control" })
            </div>
            <div>
                Sighting Heroes @Html.ListBoxFor(m => m.SightingObject.SelectedHeroesID, new SelectList(Model.SightingHeroes, "HeroID", "HeroName"), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.SightingHeroes)
            </div>           
            <div class="col-xs-3">
                Sighting Location @Html.DropDownListFor(s => s.SightingObject.SightingLocation.LocationID, new SelectList(Model.SightingLocation, "LocationID", "LocationName"), "-Choose One-", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.SightingLocation)
            </div>
            <div class="col-xs-3">
                Sighting Description @Html.TextBoxFor(s => s.SightingObject.SightingDescription, new { @class = "form-control" })
            </div>
            @*<div class="col-xs-3">
                Publish ? @Html.CheckBoxFor(s => s.Ispublished, new { @class = "form-control" })
            </div>*@
                
        </div>
    </div>

    <div class="col-xs-3">
        <button type="submit" class="btn btn-default">Save</button>
    </div>
    }
    <div class="col-xs-12" id="heroarea">

    </div>
